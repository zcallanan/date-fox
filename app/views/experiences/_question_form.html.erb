
<%= simple_form_for(@search, remote: true) do |f| %>
  <%= f.input :starts_at, 
              as: :string, 
              label: "Start",
              placeholder: 'From:',
              input_html: {class: "datepicker"} %>
  <%= f.input :ends_at, 
              as: :string, 
              label: "End",
              placeholder: 'To:',
              input_html: {class: "datepicker"} %>
  <%= f.input :price_range, as: :range, label: "Set your budget" %>
  <%= f.input :activity_kind, 
              collection: @activity_kinds, 
              lable_method: :activity_kind_name, 
              value_methode: :id, 
              label: "What do you want to do?", 
              include_blank: false %>
  <%= f.button :submit, "Done!" %>
<% end %>