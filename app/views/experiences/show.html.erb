<div class="experience-show-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://res.cloudinary.com/daf8fgekl/image/upload/v1590058200/Bildschirmfoto_2020-05-21_um_12.49.05_f7r7qj.png')">
    <h1>Experience</h1>
</div>

<div class="container p-0">
  <div class="row">
    <% n = 0 %>
    <div class="col-10 p-0">
      <% @experience.items.each do |item| %>
        <%= render 'show_card', search: @search, item: item %>
        <% n += 1 %>
        <% if n < @experience.items.size %>
          <%= render 'show_travel_card' %>
        <% end %>
      <% end %>
    </div>
    <div class="col-2 p-0">
      <div class="action-box">
        <div class="action-text">
          <div class="logo">
            <%= image_tag "logo-sm.png" %>
          </div>
            <p>✔️ Book a table</p>
            <p>✔️ Book tickets</p>
            <p>✔️ Organise transport</p>
            <p>✔️ Special included?</p>
          <div class="call">
            <%= link_to "Book your pefect date",  experience_bookings_path(@experience), method: :post, class: "action btn btn-primary" %>
          </div>
          <h5>Add your preferences</h5>
            <p>
              <input type="checkbox">
              Flower service?
              <span class="checkmark"></span>
            </p>
            <p>
              <input type="checkbox">
              Limousine service?
              <span class="checkmark"></span>
            </p>
            <p>
              <input type="checkbox">
              Birthday service?
              <span class="checkmark"></span>
            </p>
            <p>
              <input type="checkbox">
              First date service?
              <span class="checkmark"></span>
            </p>
        </div>
      </div>
    </div>
  </div>
</div>


