<div class="experience-show-banner" style="background-image: linear-gradient(rgba(150,150,150,0.3), rgba(150,150,150,0.3)), url('https://res.cloudinary.com/daf8fgekl/image/upload/v1590058200/Bildschirmfoto_2020-05-21_um_12.49.05_f7r7qj.png')">
    <h1>Your dating experience</h1>
</div>

<div class="container p-0">
  <div class="row">
    <div class="col-10 p-0">
      <% @ordered_items.each_with_index do |item, index| %>
        <%= render 'show_card', search: @search, item: item %>
        <% if index < @ordered_items.size - 1 %>
          <%= render 'show_travel_card' %>
        <% end %>
      <% end %>
    </div>
    <div class="col-2 p-0">
      <div class="action-box">
        <div class="action-text">
          <div class="logo">
            <%= image_tag "logo-sm.png" %>
          </div>
            <h5>What your package includes</h5>
            <div class="checklist row">
              <div class="check col-2 pl-2 pr-0">
                <div class="check"><%= image_tag "icons.svg" %></div>
                <div class="check"><%= image_tag "icons.svg" %></div>
                <div class="check"><%= image_tag "icons.svg" %></div>
              </div>
              <div class="checktext col-10 mt-3 pl-0 pr-2">
                <div class="check-text"><p>We reserve the tables for you</p></div>
                <div class="check-text"><p>We book your entrance tickets</p></div>
                <div class="check-text"><p>We arrange your transport</p></div>
              </div>
            </div>
          <div class="call">
            <%= link_to "Book your pefect date",  experience_bookings_path(@experience), method: :post, class: "action btn btn-success" %>
          </div>
          <h5>Add date specials</h5>
            <p>
              <input type="checkbox">
              Flower service
              <span class="checkmark"></span>
            </p>
            <p>
              <input type="checkbox">
              Limousine service
              <span class="checkmark"></span>
            </p>
            <p>
              <input type="checkbox">
              Birthday service
            </p>
            <p>
              <input type="checkbox">
              Special date service
              <span class="checkmark"></span>
            </p>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
      const icons = document.querySelectorAll("i")
      icons.forEach(icon => {
      icon.addEventListener("click",() =>{
      event.currentTarget.classList.toggle("clicked")
    })
  })
</script>



