<div class="card-category">
  <div class="text-center bg-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1497644083578-611b798c60f3?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80)">
    <h2>Experience</h2>
  </div>
  <div class="row test-background">
    <% experience.items.each do |item| %>
      <div class="row flex-grow-1">
        <div class="col flex-grow-1">
          <%= render 'item-card', item: item, searches: searches %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col text-center">
      <%= link_to "Choose Experience", search_experience_path(search_id: searches, id: experience), class: "btn btn-primary text-center rounded-lg mt-2" %>
    </div>
  </div>
</div>

