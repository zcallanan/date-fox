<div class="card-category">
  <div class="row">
    <div class="">
      <div  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <h2>Experience</h2>
        </div>
      <% 3.times do %>
        <div class="row">
          <div class="col">
            <%= render 'item-card', items: items[1], experiences: experiences %>
          </div>
        </div>
      <% end %>
      <div class="row">
        <div class="col">
          <%= link_to "Choose Experience", experience_path(experiences), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>

