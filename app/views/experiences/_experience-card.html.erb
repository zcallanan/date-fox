<div class="card-category">
  <div class="text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url()">
    <h2>Experience</h2>
  </div>
  <div class="row test-background">
    <% experience.items.each do |item| %>
      <div class="row flex-grow-1">
        <div class="col flex-grow-1">
          <%= render 'item-card', item: item, searches: searches %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col text-center">
      <%= link_to "Choose Experience", search_experience_path(search_id: searches, id: experience), class: "btn btn-primary text-center" %>
    </div>
  </div>
</div>

